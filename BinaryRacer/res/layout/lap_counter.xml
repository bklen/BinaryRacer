<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/difficultyTextView"
        android:layout_alignBottom="@+id/difficultyTextView"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/difficultyTextView"
        android:text="@string/you_count_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/startRaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/driverMeetingTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="59dp"
        android:layout_marginLeft="55dp"
        android:text="@string/answer_button" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/difficultyTextView"
        android:layout_centerVertical="true"
        android:text="@string/conver_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lapCountTextView"
        android:layout_alignBottom="@+id/lapCountTextView"
        android:layout_alignRight="@+id/driverMeetingTextView"
        android:text="@string/opponent_count_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="16dp"
        android:text="@string/to_binary_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/startRaceButton"
        android:layout_alignRight="@+id/lapCountTextView"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/lapCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/textView4"
        android:text="@string/opponent_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/editText1"
        android:text="@string/dec_number_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/driverMeetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/lap_counter_text"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/difficultyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/driverMeetingTextView"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/driverMeetingTextView"
        android:text="@string/you_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
